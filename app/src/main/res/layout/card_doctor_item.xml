<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:id="@+id/cardview_level_d_item"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="25dp"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/level_e_imagecard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:elevation="10dp"
            cardview:cardCornerRadius="20dp"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/level_d_item_img"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="#222d"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/level_d_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:text="Doctor Name"
            android:textColor="#2d2d2d"
            android:textSize="16sp"
            android:textStyle="bold"
            cardview:layout_constraintStart_toEndOf="@+id/level_e_imagecard"
            cardview:layout_constraintTop_toTopOf="@+id/level_e_imagecard" />

        <!---->
        <ImageView
            android:id="@+id/level_d_view_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_baseline_star_rate_24"
            cardview:layout_constraintStart_toStartOf="@+id/level_d_bio_t9ext"
            cardview:layout_constraintTop_toBottomOf="@+id/level_d_bio_t9ext"
            cardview:tint="#e67e17" />

        <TextView
            android:id="@+id/level_d_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="sans-serif-light"
            android:maxLines="3"
            android:text="5.0"
            android:textColor="@color/black"
            android:textSize="14sp"
            cardview:layout_constraintStart_toEndOf="@+id/level_d_view_image"
            cardview:layout_constraintTop_toTopOf="@+id/level_d_view_image" />

        <TextView
            android:id="@+id/level_d_bio_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-light"
            android:maxLines="3"
            android:text="10:00AM - 02:00PM"
            android:textColor="@color/black"
            cardview:layout_constraintBottom_toBottomOf="@+id/level_d_views"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintTop_toTopOf="@+id/level_d_views" />

        <ImageView
            android:id="@+id/level_d_view_image3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_baseline_clock_builder_24"
            cardview:layout_constraintBottom_toBottomOf="@+id/level_d_bio_text"
            cardview:layout_constraintEnd_toStartOf="@+id/level_d_bio_text"
            cardview:layout_constraintTop_toTopOf="@+id/level_d_bio_text"
            cardview:tint="@color/colorPrimary" />


        <TextView
            android:id="@+id/level_d_bio_t9ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:maxLines="3"
            android:text="Senior Neurologist"
            cardview:layout_constraintStart_toStartOf="@+id/level_d_title_id"
            cardview:layout_constraintTop_toBottomOf="@+id/level_d_title_id" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>